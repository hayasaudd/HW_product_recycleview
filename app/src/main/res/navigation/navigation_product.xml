<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_product"
    app:startDestination="@id/productListFragment">

    <fragment
        android:id="@+id/productListFragment"
        android:name="com.example.hw_product_Mobiles.fragments.ProductListFragment"
        android:label="ProductListFragment" >
        <action
            android:id="@+id/action_productListFragment_to_packagingDetailsFragment"
            app:destination="@id/packagingDetailsFragment"/>

    </fragment>
    <fragment
        android:id="@+id/packagingDetailsFragment"
        android:name="com.example.hw_product_Mobiles.fragments.ProductDetailsFragment"
        android:label="ProductDetailsFragment" >
        <argument
            android:name="productImage"
            app:argType="string"/>
        <argument
            android:name="productName"
            app:argType="string"/>
    </fragment>


</navigation>